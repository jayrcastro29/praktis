<!DOCTYPE html>
<html>
  <head>
    <title>Praktis</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>



          <%if user_signed_in? %>
            Logged in as: <strong><%=  current_user.email %> </strong><br>      
              <%= link_to 'Log-out', destroy_user_session_path, method: :delete%>  <br>
              <%= link_to 'Profile', profiles_path %>
          <% end %>


          <%if !user_signed_in? %>
              <%= link_to 'Log-in', new_user_session_path %>
               <%= link_to 'Sign-up', new_user_registration_path %> <br>
          <% end %>
          
          <%= link_to 'Home', root_path %>
          <%= link_to 'View Posts', posts_path %>
            

    <%= yield %>

  </body>
</html>
